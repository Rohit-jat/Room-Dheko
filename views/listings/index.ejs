

<% layout("/layouts/boilerplate") %>




<body style="background-color: #f8f9fa;">
  
    
            <p class="text-muted pt-2">Browse all available rooms</p>
      
        
    <div class="bg-light row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" style="text-decoration: none;">
                <div class="card forScale d-flex justify-content-center mx-auto " style="width: 20rem; cursor: pointer;">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="Room Image">
                    <div class="card-body">
                        <div class="card-img-overlay">
                            <h5 class="card-title"></h5>
                            <p class="text-on-card"><i class="fa-regular fa-heart"></i></p>
                            <p class="text-on-card"><small></small></p>
                          </div>
                        <b><p class="card-text"><%= listing.title %></p></b>
                        <p>&#8377; <%= listing.price.toLocaleString("en-IN") %>/month</p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
